# http://matplotlib.org/users/customizing.html

# Note: Units are in pt not in px
#
# How to convert px to pt in Inkscape
# > Inkscape pixel is 1/90 of an inch, other software usually uses 1/72.
# > This means if you need 10pt - use 12.5 in Inkscape (multiply with 1.25).
# > http://www.inkscapeforum.com/viewtopic.php?f=6&t=5964

text.usetex          : False
mathtext.default     : regular

font.family          : sans-serif
font.serif           : Arial, sans-serif
font.sans-serif      : Arial, sans-serif
font.cursive         : Arial, sans-serif
font.size            : 6
figure.titlesize     : 6
figure.dpi           : 300
image.cmap           : RdBu_r

figure.figsize       : 1.5, 1.5
figure.constrained_layout.use: True
figure.constrained_layout.h_pad: 0.#0.04167
figure.constrained_layout.hspace: 0.#0.02
figure.constrained_layout.w_pad: 0.#0.04167
figure.constrained_layout.wspace: 0.#0.02

legend.fontsize      : 5
axes.titlesize       : 5
axes.labelsize       : 5
xtick.labelsize      : 5
ytick.labelsize      : 5

image.interpolation   : nearest
image.resample        : False
image.composite_image : True

axes.spines.left     : True
axes.spines.bottom   : True
axes.spines.top      : False
axes.spines.right    : False

# all width default 1.0s 
axes.linewidth       : 1
xtick.major.width    : 1
xtick.major.size     : 2
ytick.major.width    : 1
ytick.major.size     : 2

xtick.minor.width    : 0.5
xtick.minor.size     : 1.
ytick.minor.width    : 0.5
ytick.minor.size     : 1.

lines.linewidth      : 1
lines.markersize     : 3

savefig.dpi          : 300
savefig.format       : svg
savefig.bbox         : tight
savefig.pad_inches   : 0. #0.1

svg.image_inline     : True
svg.fonttype         : none

legend.frameon       : False
axes.prop_cycle      : cycler('color', ['k', '1f77b4', 'ff7f0e', '2ca02c', 'd62728', '9467bd', '8c564b', 'e377c2', '7f7f7f', 'bcbd22', '17becf'])